generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Note {
  id        String   @id @default(cuid())
  name      String
  email     String?  // Optional email field
  notes     String
  timestamp DateTime @default(now())
  updatedAt DateTime? @updatedAt // auto-updates whenever record changes
}
